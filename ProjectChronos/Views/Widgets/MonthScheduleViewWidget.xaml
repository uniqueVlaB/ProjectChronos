<?xml version="1.0" encoding="utf-8" ?>
<CarouselView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="ProjectChronos.Views.Widgets.MonthScheduleViewWidget"
              xmlns:drawable="clr-namespace:ProjectChronos.Graphics"
              x:Name="Widget"
              ItemsSource="{Binding MonthDrawables,Source={x:Reference Widget}}">
    <CarouselView.ItemTemplate>
        <DataTemplate x:DataType="drawable:MonthScheduleDrawing">
            <VerticalStackLayout>
                <!--<Frame BackgroundColor="White" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center" VerticalOptions="Center"/>-->
            <GraphicsView Drawable="{Binding}" HeightRequest="300" WidthRequest="300" BackgroundColor="Wheat"/>
            </VerticalStackLayout>
        </DataTemplate>
    </CarouselView.ItemTemplate>
</CarouselView>
